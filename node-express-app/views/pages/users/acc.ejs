<div class="container" id="registration">
    <div class="row">
      <div class="col-sm-8">
        <h1>My Account</h1>
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-4">
                <% if (!user.avatar) { %>
                  <img class="img-responsive" src="/images/avatar_placeholder.png" />
                <% } else { %>
                  <img class="img-responsive" src="/users/avatar/<%= user.avatar %>" />
                <% } %>
              </div>
              <div class="col-md-8">
                <div class="row">
                  <div class="col-md-4">Username:</div>
                  <div class="col-md-8"><%= user.username %></div>
                </div>
                <div class="row">
                  <div class="col-md-4">E-Mail:</div>
                  <div class="col-md-8"><%= user.email %></div>
                </div>
                <div class="row">
                  <div class="col-md-4">Registered</div>
                  <div class="col-md-8"><%= user.createdAt %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% if (artwork) { %>
        <aside class="col-sm-4"></aside>
      <% } %>
    </div>
  </div>
  